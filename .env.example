# =============================================================================
# Production environment variables for docker-compose.prod.yml
# Copy to .env and fill in the values
# =============================================================================

# --- Required ---

# Database (used by docker-compose.prod.yml to set PostgreSQL and backend)
DB_USER=construction_admin
DB_PASSWORD=CHANGE_ME_strong_random_password
DB_NAME=construction_manager

# JWT authentication
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32

# Azure Blob Storage (for blueprints, photos, protocol PDFs, backups)
AZURE_STORAGE_ACCOUNT_NAME=taskproofstorage
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER=files

# Azure Container Registry
ACR_REGISTRY=taskproofacr.azurecr.io

# --- Optional ---

# Image tag (defaults to 'latest', set by CI/CD)
# IMAGE_TAG=latest

# Frontend URL for CORS (defaults to http://localhost)
# FRONTEND_URL=http://your-vm-ip

# Email (SMTP)
# EMAIL_SENDER=noreply@taskproof.se
# SMTP_HOST=
# SMTP_PORT=587
